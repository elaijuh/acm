{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build & run with Clang",
      "type": "shell",
      "command": "/usr/local/opt/llvm/bin/clang++",
      "args": [
        "-I/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/include",
        "-std=c++17",
        "-stdlib=libc++",
        "${file}",
        "-o",
        "${fileDirname}/a.out",
        "&&",
        "${fileDirname}/a.out"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}
